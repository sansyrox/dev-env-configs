{
	"comments": {
		"lineComment": "%"
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["`", "'"]
	],
	"surroundingPairs": [
		["{", "}"],
		["[", "]"],
		["(", ")"],
		["\"", "\""],
		["'", "'"],
		["`", "'"],
		["$", "$"]
	],
	"indentationRules": {
		"increaseIndentPattern": "(\\\\begin{(?!document))",
		"decreaseIndentPattern": "(\\\\end{(?!document))"
	},
	"folding": {
		"markers": {
			"start": "^\\s*%\\s*#?region\\b.*",
			"end": "^\\s*%\\s*#?endregion\\b.*"
		}
	},
	"wordPattern": "(__)|(\\*\\*)|(\\@.)|(\\.\\.\\.)|([^\\`\\~\\!\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s\\@_]{2,})"
}
